<div style="height:45vh;overflow:auto">
  <p class="list-group-item">{{model.name}} ({{model.shortArcrole}})</p>
  {{#if model.parent}}
    {{#link-to 'dimension-node' model.parent data-test-dimension-parent=true class="list-group-item"}}
      <i class="fa fa-chevron-left fa-fw"></i> {{model.parent.name}}
    {{/link-to}}
  {{/if}}
  {{#if (eq model.parent.shortArcrole "dimension-domain") }}
    <a class="list-group-item justify-content-between" href="#" {{action "addDimension" model.parent}}>
        <span class="truncate">{{model.parent.name}}</span>
        <i class="fa plus fa-fw"></i>
      </a>
  {{/if}}
  {{#each model.children as |child|}}
    {{#if (eq model.shortArcrole "dimension-domain")}} 
      <a class="list-group-item justify-content-between" href="#" {{action "addDimension" child}}>
        <span class="truncate">{{child.name}}</span>
        <i class="fa plus fa-fw"></i>
      </a>
    {{else}}
      {{#link-to 'dimension-node' child class="list-group-item justify-content-between"}}
        <span class="truncate">{{child.name}} ({{child.dimensionType}})</span>
        <i class="fa fa-chevron-right fa-fw"></i> 
      {{/link-to}}
    {{/if}}
  {{/each}}
</div>