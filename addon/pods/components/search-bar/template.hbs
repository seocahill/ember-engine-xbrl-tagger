<form>
  <div class="form-group">
     {{input value=query type="search" key-up=(action 'filterModel') placeholder="search taxonomy" data-test-search-input=true
    class="form-control" }}
  </div>
</form>
<ul class="list-group">
  {{#each results as |result|}}
    <a href="#" {{action "handleClick" result}} class="list-group-item">{{result.name}}</a>
  {{/each}}
</ul>