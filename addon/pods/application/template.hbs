<div class="list-group mb-2">
  <a href="#" {{action "changeRole"}} class="list-group-item" data-test-current-dts>DTS: {{dts.name}}</a> 
  {{#if pinnedNode}}
    <div class="list-group-item d-inline-flex justify-content-between">
      <div class="p-2">
        <i class="fa fa-bookmark fa-fw"></i> {{#link-to 'discoverable-taxonomy-set.role-type.presentation-node' currentCell.taxonomyId pinnedNode.roleType pinnedNode.id}} {{pinnedNode.name}} {{/link-to}}
      </div>
      <div class="p-2"><a href="#" {{action 'unpinNode'}} class="btn btn-outline-primary btn-sm"><i class="fa fa-fw fa-remove fa-lg"></i></a></div>
    </div>
  {{else}}
    {{#link-to 'discoverable-taxonomy-set.role-type' currentCell.taxonomyId currentCell.roleType class="list-group-item" data-test-current-role="true"}}Role:
      {{currentCell.roleType.definition}}
    {{/link-to}}
  {{/if}}
  {{#link-to 'value' class="list-group-item text-truncate" data-test-cell-value="true"}}Value: {{currentCell.cell.value}}{{/link-to}}
  {{#link-to 'periods' class="list-group-item" data-test-cell-period="true"}}Period: {{currentCell.cell.period}}{{/link-to}}
  <a href="#" {{action "linkToTag"}} class="list-group-item text-truncate" data-test-cell-tag>
    Tag: {{if currentCell.cell.isAppended (if currentCell.cell.hasTagInfo "Appended + Tagged" "Appended") currentCell.cell.settings.name}} {{if hasTuple "(tuple)"}}
  </a>
  {{#link-to 'dimensions' class="list-group-item text-truncate" data-test-cell-dimensions="true"}}Dimensions: {{dimensionNames}}{{/link-to}}
</div>
<div class="card"> 
  <main class="card-body">
    {{outlet}}
  </main>
</div>